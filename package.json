{
  "name": "ToolPage",
  "version": "1.0.0",
  "description": "ToolPage Application",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/hana": "^1.3.2",
    "@sap-cloud-sdk/http-client": "^3.22.2",
    "@sap-cloud-sdk/resilience": "^3.22.2",
    "@sap/cds": "^8.3.1",
    "@sap/xssec": "^4.2.6",
    "express": "^4.21.1"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds-dk": "^7",
    "@sap/hdi-deploy": "4.9.5"
  },
  "scripts": {
    "start": "cds-serve",
    "build-deploy":"mbt build && cf deploy mta_archives/ToolPage_1.0.0.mtar"      
  },
  "cds": {
    "server": {
      "index": true
    },
    "requires": {
      "db": "hana",
      "auth": "xsuaa",
      "RoleConfig": {   
        "kind": "rest",
        "credentials": {
          "destination": "RoleConfig",
          "path": "/sap/rest/authorization/v2"
        }
      },
      "connectivity": true,
      "destinations": true,
      "[hybrid]": {
        "auth": "xsuaa"
      }
    },
    "hana": {
      "deploy-format": "hdbtable"
    }
  }
}
